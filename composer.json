{
    "name": "goldenpalms/crm",
    "description": "Custom CRM System for Golden Palms Beach Resort",
    "type": "project",
    "require": {
        "php": "^8.1",
        "slim/slim": "^4.11",
        "slim/psr7": "^1.6",
        "slim/http": "^1.3",
        "firebase/php-jwt": "^6.8",
        "monolog/monolog": "^3.4",
        "illuminate/database": "^10.0",
        "illuminate/pagination": "^10.0",
        "vlucas/phpdotenv": "^5.5",
        "phpmailer/phpmailer": "^6.8",
        "guzzlehttp/guzzle": "^7.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "GoldenPalms\\CRM\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GoldenPalms\\CRM\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "optimize-autoloader": true
    }
}

