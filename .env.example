# Golden Palms CRM - Environment Configuration
# Copy this file to .env and update with your actual values

# Application Environment
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_SECRET=your-secret-key-here-change-in-production

# Database Configuration
# Option 1: Use connection URL (for Railway, Render, etc.)
MYSQL_URL=mysql://username:password@host:port/database
# OR DATABASE_URL=mysql://username:password@host:port/database

# Option 2: Use individual variables
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=goldenpalms_crm
DB_USERNAME=root
DB_PASSWORD=

# Alternative MySQL variable names (for Railway compatibility)
# MYSQL_HOST=localhost
# MYSQL_PORT=3306
# MYSQL_DATABASE=goldenpalms_crm
# MYSQL_USER=root
# MYSQL_PASSWORD=

# JWT Authentication
JWT_SECRET=generate-a-random-32-character-string-here
JWT_EXPIRY=86400

# Email Configuration (SMTP)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
SMTP_SECURE=tls
EMAIL_FROM=noreply@goldenpalmsbeachresort.com
EMAIL_FROM_NAME=Golden Palms Beach Resort
EMAIL_REPLY_TO=info@goldenpalmsbeachresort.com

# Meta Lead Ads Webhook
META_LEAD_ADS_VERIFY_TOKEN=your-verify-token-here

# Review Platform URLs
GOOGLE_REVIEW_URL=https://g.page/r/.../review
TRIPADVISOR_REVIEW_URL=https://www.tripadvisor.com/...
FACEBOOK_REVIEW_URL=https://www.facebook.com/...

# File Upload Configuration
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf
UPLOAD_MAX_SIZE=5242880

# Database Auto-Initialization (for Railway/Render deployments)
AUTO_INIT_DB=true
